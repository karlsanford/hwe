                                <li><a href="#">Separated link</a></li>
                                <li role="separator" class="divider"></li>
                                <li><a href="#">One more separated link</a></li>
                            </ul>
                        </li>
                    </ul>
                    <form class="navbar-form navbar-left" role="search">
                        <div class="form-group">
                            <input type="text" class="form-control" placeholder="Search">
                        </div>
                        <button type="submit" class="btn btn-default">Submit</button>
                    </form>
                    <ul class="nav navbar-nav navbar-right">
                        <li><a href="#">Link</a></li>
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Dropdown <span class="caret"></span></a>
                            <ul class="dropdown-menu">
                                <li><a href="#">Action</a></li>
                                <li><a href="#">Another action</a></li>
                                <li><a href="#">Something else here</a></li>
                                <li role="separator" class="divider"></li>
                                <li><a href="#">Separated link</a></li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>

        </div>
        <div>
            //main content
            <div ng-controller="homeController">

                <h1>{{message}}</h1>

                <table class="table table-striped">
                    <thead>
                    <tr>
                        <th>Item</th>
                        <th>ID</th>
                    </tr>
                    </thead>
                    <tbody>
                    <tr ng-repeat="guest in guests">
                        <td>
                            {{guest.name}}
                        </td>
                        <td>
                            {{guest.email}}
                        </td>
                        <td>
                            {{guest.message}}
                        </td>
                        <td>
                            {{guest._id}}
                        </td>
                    </tr>
                    </tbody>


                </table>

                <form ng-submit="createGuest()">
                    <div class="form-group">
                        <label for="inputGuestName">Name</label>
                        <input ng-model='guestName' type="text" class="form-control" id="inputGuestName" placeholder="Name">
                    </div>
                    <div class="form-group">
                        <label for="inputGuestEmail">Email Address</label>
                        <input ng-model='guestEmail' type="email" class="form-control" id="inputGuestEmail" placeholder="Email">
                    </div>
                    <div class="form-group">
                        <label for="inputGuestMessage">Message</label>
                        <input ng-model='guestMessage' type="text" class="form-control" id="inputGuestMessage" placeholder="Message">
                    </div>

                    <button class="btn btn-primary" type="submit">Sign</button>
                </form>


            </div>
        </div>
    </div>

	
	<script type="text/javascript" src="jquery/dist/jquery.js"></script>
	<script type="text/javascript" src="bootstrap/dist/js/bootstrap.js"></script>
	<script type="text/javascript" src="angular/angular.js"></script>
	<script type="text/javascript" src="app.js"></script>
	<script type="text/javascript" src="controllers/home-controller.js"></script>
</body>
</html>